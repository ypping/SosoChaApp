<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qiang_diao_listview_touxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/touxiang" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/qiang_diao_listview_mingcheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="3dp"
                android:text="李小妮子"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/qiang_diao_listview_shijian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:text="分钟前" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#EAEAEA"
            android:src="@drawable/sangedian" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/qiang_diao_listview_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/qiang_diao_listview_image1"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic02" />

                <ImageView
                    android:id="@+id/qiang_diao_listview_image2"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic06" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/qiang_diao_listview_image3"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic05" />

                <ImageView
                    android:id="@+id/qiang_diao_listview_image4"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic04" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/qiang_diao_listview_image5"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic03" />

                <ImageView
                    android:id="@+id/qiang_diao_listview_image6"
                    android:layout_width="0dp"
                    android:layout_height="90dp"
                    android:layout_weight="1"
                    android:src="@drawable/pic01" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-25dp"
            android:background="@drawable/app_soso_qiang_diao_tiaoxin"
            android:padding="15dp"
            android:src="@drawable/taoxin" />

        <ImageView
            android:id="@+id/xiaotaoxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_marginTop="10dp"
            android:src="@drawable/taoxin2" />

        <TextView
            android:id="@+id/qiang_diao_listview_dianzhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/xiaotaoxin"
            android:text="56"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pintlun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/qiang_diao_listview_linear"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_marginTop="10dp"
            android:text="评论"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/qiang_diao_listview_pingjia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/pintlun"
            android:text="10"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/qiang_diao_listview_linear"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/qiang_diao_listview_pingjia"
            android:src="@drawable/pingjia" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/qiang_diao_listview_touxiang1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/touxiang" />

        <ImageView
            android:id="@+id/qiang_diao_listview_touxiang2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/touxiang" />

        <ImageView
            android:id="@+id/qiang_diao_listview_touxiang3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/touxiang" />

        <ImageView
            android:id="@+id/qiang_diao_listview_touxiang4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="5dp"
            android:src="@drawable/touxiang" />
    </LinearLayout>

</LinearLayout>