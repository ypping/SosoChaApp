<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/ping_lun_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/ping_lun_title" />

    <TextView
        android:id="@+id/ping_lun_person"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ping_lun_title"
        android:text="小阿张1095" />

    <TextView
        android:id="@+id/ping_lun_time"
        android:layout_width="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/ping_lun_title"
        android:layout_below="@id/ping_lun_title"
        android:text="2014-05-12" />

</RelativeLayout>